<%= form_with(model: card, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "erro impediu", "erros impediram") %> este cart√£o de ser salvo:</h2>

      <ul>
        <% card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Primeiro Nome' %>
  </div>

  <div class="form-group">
    <%= form.select :bank, Card.banks.map { |key, value| [key.humanize, key] }, {}, class: 'form-control' %>
  </div>

  <div class="actions">
    <% if params[:id] %>
      <%= form.submit 'Salvar', class: 'btn btn-outline-success' %>
      <%= link_to 'Mostrar', @user, class: 'btn btn-outline-primary' %>
    <% else %>
      <%= form.submit 'Adicionar', class: 'btn btn-outline-success' %>
    <% end %>
    <%= link_to 'Voltar', cards_path, class: 'btn btn-outline-secondary' %>

  </div>

<% end %>
