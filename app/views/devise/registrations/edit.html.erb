<h2>Editar Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.email_field :first_name, autofocus: true, class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.email_field :last_name, autofocus: true, class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %> <i>(Deixe em branco se não quiser mudar)</i><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres no mínimo</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(você precisa inserir sua senha para confirmar as mudanças)</i><br />
    <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: 'btn btn-outline-success' %>
    <%= link_to "Voltar", :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>

